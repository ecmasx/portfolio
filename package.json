{
  "name": "portfolio",
  "version": "1.0.1",
  "main": "server.js",
  "scripts": {
    "start": "node ./src/scripts/server.js",
    "dev": "nodemon ./src/scripts/server.js",
    "watch:css": "tailwindcss -i ./src/styles/main.css -o ./public/css/output.css --watch",
    "build:css": "tailwindcss -i ./src/styles/main.css -o ./public/css/output.css --minify",
    "dev:all": "concurrently \"npm run dev\" \"npm run watch:css\""
  },
  "keywords": [
    "portfolio",
    "web",
    "nodejs",
    "express",
    "tailwindcss"
  ],
  "author": "Maxim Madan",
  "license": "ISC",
  "dependencies": {
    "autoprefixer": "^10.4.20",
    "express": "^4.21.2",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.13"
  },
  "devDependencies": {
    "nodemon": "^3.1.7",
    "concurrently": "^8.2.0"
  },
  "description": ""
}
